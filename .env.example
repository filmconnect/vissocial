# ============================================================
# .env.example
# Example environment configuration for Vissocial
# Copy this file to .env and replace values with real ones
# ============================================================

NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Vissocial

# ============================================================
# üåê APPLICATION URL
# ============================================================
# Public URL of the app (ngrok / production domain)
APP_URL=https://your-app-url.example

# ============================================================
# üóÑÔ∏è DATABASE
# ============================================================
DATABASE_URL=postgres://username:password@localhost:5434/database_name
REDIS_URL=redis://localhost:6380

# ============================================================
# üì¶ OBJECT STORAGE (MinIO / S3)
# ============================================================
# Internal S3-compatible endpoint (used by backend)
S3_ENDPOINT=http://localhost:9100

# S3 Credentials
S3_REGION=us-east-1
S3_BUCKET=vissocial
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key

# Public base URL for assets (CDN in production)
S3_PUBLIC_BASE=https://cdn.example.com/vissocial

# ============================================================
# ü§ñ OPENAI
# ============================================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# ============================================================
# üé® FAL.AI (Image Generation)
# ============================================================
FAL_KEY=your-fal-api-key
FAL_FLUX_MODEL=flux/dev

# ============================================================
# üìä POLICY SERVICE (Bandit Algorithm)
# ============================================================
POLICY_URL=http://localhost:8010

# ============================================================
# üì∏ META / INSTAGRAM
# ============================================================
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_GRAPH_VERSION=v23.0
META_REDIRECT_URI=https://your-app-url.example/api/instagram/callback
META_SCOPES=instagram_business_basic,instagram_business_content_publish,instagram_business_manage_comments,instagram_business_manage_messages,instagram_business_manage_insights

# ============================================================
# ‚öôÔ∏è PUBLISHING CONTROLS
# ============================================================
ENABLE_INSTAGRAM_PUBLISH=false

# ============================================================
# üîß DEV TOGGLES
# ============================================================
DEV_GENERATE_LIMIT=3
DEV_ALLOW_LIMIT_OVERRIDE=false
APP_DEBUG=true

# ============================================================
# üîê ADMIN
# ============================================================
ADMIN_SECRET=your-admin-identifier
NEXT_PUBLIC_ADMIN_SECRET=your-admin-identifier
